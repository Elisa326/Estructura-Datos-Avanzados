public class NodoBT <T>{
    T elemento;
    NodoBT<T> izq, der;
    NodoBT(T elem){
        elemento = elem;
        izq = null;
        der = null;
    }
    
    public int numDescendientes(){
        int hijos = 0;
        if(izq != null)
            hijos = 1 + izq.numDescendientes();
        if(der != null)
            hijos = 1 + der.numDescendientes() + hijos;
        return hijos;
    }
    
